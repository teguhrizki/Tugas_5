<%= form_tag sessions_path, :html => { class: "form-signin"} do %>
<h2 class="form-signin-heading">Please sign in</h2>
<div class="form-group">
<%= label_tag :username %>

<%= text_field_tag :username, (params[:username] unless params[:username].blank?), :html => { class: "form_control"} %>
</div>
<br/>

<%= label_tag :password %>

<%= password_field_tag :password %>

<br/>

<%= submit_tag :submit %>

<% end %>